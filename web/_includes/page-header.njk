<header
  class="flex justify-between items-center p-4 mb-8 w-full min-h-16 sm:mb-12"
>
  <div class="flex-none">
    {% if page.url.startsWith("/album") %}
    <a class="btn btn-square" href="/" title="Back to Albums">
      <svg
        width="24"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"
        />
      </svg>
    </a>
    {% else %}
    <a class="btn" href="/">
      <img
        src="/images/logo-transparent.png"
        alt="digifilm"
        width="170"
        class="header-logo"
      />
    </a>
    {% endif %}
  </div>

  <div class="flex-grow flex justify-center">
    {% if page.url.startsWith("/album") %}
    <img
      src="/images/logo-transparent.png"
      alt="digifilm"
      width="170"
      class="header-logo"
    />
    {% endif %}
  </div>

  <div class="flex-none">
    <ul>
      <li>
        <button
          class="btn btn-square cursor-pointer"
          id="menu-toggle"
          type="button"
          title="Menu"
          @click="menuOpen = !menuOpen"
          :aria-expanded="menuOpen"
        >
          <svg
            class="w-6 h-6"
            :class="{ 'hidden': menuOpen }"
            width="24"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
            />
          </svg>
          <svg
            class="w-6 h-6"
            :class="{ 'hidden': !menuOpen }"
            width="24"
            height="24"
            fill="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true"
          >
            <path
              clip-rule="evenodd"
              fill-rule="evenodd"
              d="M5.47 5.47a.75.75 0 0 1 1.06 0L12 10.94l5.47-5.47a.75.75 0 1 1 1.06 1.06L13.06 12l5.47 5.47a.75.75 0 1 1-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 0 1-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 0 1 0-1.06Z"
            ></path>
          </svg>
        </button>
      </li>
    </ul>
  </div>
</header>
